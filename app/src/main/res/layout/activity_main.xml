<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jjczyz.coronarydiseaserisk_androidapp.MainActivity">

    <TextView
            android:id="@+id/text"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

    <Button
            android:id="@+id/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startButton_text"
            android:onClick="startQuestions"
            android:layout_above="@+id/text" android:layout_centerHorizontal="true" android:layout_marginBottom="46dp"/>
    <Button
            android:id="@+id/button_about"
            android:text="@string/aboutButton_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerVertical="true"
            android:onClick="showAbout"
            android:layout_alignRight="@+id/button_start" android:layout_alignEnd="@+id/button_start" />


</RelativeLayout>
