<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.jjczyz.coronarydiseaserisk_androidapp.ResultActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:weightSum="1">
        <TextView
                android:id="@+id/risk_textview"
                android:text="put_in_result"
                android:gravity="center"
                android:textSize="34sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  android:layout_weight="0.19"/>
        <TextView
                android:id="@+id/result_description_textview"
                android:text="@string/result_description"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"/>
        <Button
                android:text="Understanding Cardiovascular Risk"
                android:onClick="showInfo"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/cardio_risk_info_button"/>
        <Button
                android:text="Diet and physical activity"
                android:onClick="showInfo"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/diet_info_button"/>
        <Button
                android:text="Weight management"
                android:onClick="showInfo"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/weight_info_button"/>
        <Button
                android:text="Back"
                android:onClick="backToMain"
                android:layout_width="110dp"
                android:layout_height="wrap_content" android:id="@+id/backButton"/>
    </LinearLayout>
</RelativeLayout>
